{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "Fullstack Todo List Application",
  "main": "index.js",
  "scripts": {
    "build-prod:client": "cd client && npm run build-prod",
    "build-dev:client": "cd client && npm run build-dev",
    "start-prod:server": "cross-env NODE_ENV=production node dist/index.js",
    "start-dev:server": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "compile:server": "tsc",
    "dev": "npm-run-all -p -r start-dev:server build-dev:client",
    "build": "npm run compile:server && npm run build-prod:client",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/secona/todo-list.git"
  },
  "author": "secona (https://github.com/secona)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/secona/todo-list/issues"
  },
  "homepage": "https://github.com/secona/todo-list#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.5",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.1",
    "cross-env": "^7.0.3",
    "jest": "^27.0.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}

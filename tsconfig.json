{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "types": ["jest"],
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["src/**/__tests__", "node_modules"]
}

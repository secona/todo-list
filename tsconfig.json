{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@types"],
    "types": ["@types/jest"]
  },
  "exclude": ["src/**/*.test.ts", "src/**/__tests__", "node_modules"]
}
